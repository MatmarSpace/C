//ŁĄCZENIE TABLIC O RÓŻNEJ DŁUGOŚCI

//stałe
#define b 4
#define c 7

//zmienne
int t[b];
int t1[b];
int t2[c+b];

int i;
int j=0;
int szukanaWartosc;
int iloscWystapien=0;

int main()
{
    srand(time(0));

    printf("wprowadz liczbe z klawiatury: ");
    scanf("%d",&szukanaWartosc);

    printf("\npierwsza tablica: ");
    for(i=0;i<b;i++)
    {
        t[i]=rand()%10;
        printf("%d ",t[i]);
        if(t[i]==szukanaWartosc)
            iloscWystapien++;
    }
    printf("\ndruga tablica: ");
    for(i=0;i<c;i++)
    {
        t1[i]=rand()%10;
        printf("%d ",t1[i]);
    }
    printf("\nszukana liczba powtorzyla sie %d razy na miejscach: ",iloscWystapien);
    for(i=0;i<b;i++)
    {
        if(t[i]==szukanaWartosc)
            printf("%d ",i);
    }

    //łączenie tablic
    if(b>=c)
    {
        for(i=0;i<c;i++)
        {
            t2[j]=t[i];
            t2[j+1]=t1[i];
            j+=2;
        }
        for(;i<b;i++)
        {
            t2[j]=t[i];
            j++;
        }
    }
    else
    {
        for(i=0;i<b;i++)
        {
            t2[j]=t[i];
            t2[j+1]=t1[i];
            j+=2;
        }
        for(;i<c;i++)
        {
            t2[j]=t1[i];
            j++;
        }
    }
    

    printf("\ntablica wynikowa polaczaona z dwoch:\n");
    for(i=0;i<c+b;i++)
    {
        printf("%d ",t2[i]);
    }

}
